<div id="request-start" class="request-container">
  <div class="row form-group">
    <div class="col-md-12">
      <%= t('.intro_one') %>
    </div>
  </div>
  <div class="row form-group">
    <div class="col-md-12">
      <%= t('.intro_two') %>
    </div>
  </div>
  <div class="row form-group">
    <div class="col-md-12">
      <%= t('.new_request') %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <%= link_to t('buttons.new_request'), [:new, :request, mobile: @mobile], remote: true,
        class: 'btn btn-primary' %>
    </div>
    <div class="col-md-12">
      <br/>
      <ul>
        <li><%= t('.not_here_one') %> <strong><%= link_to t('.not_here_two'), Settings::Url.ks_server_url, data: { turbolinks: false }, target: "_blank" %></strong> <%= t('.not_here_three') %></li>
        <% %w(emergencies complex_requests personal_requests).each do |val| -%>
          <li><%= t(".no_#{ val }") %></li>
        <% end -%>
      </ul>
    </div>
  </div>
</div>
