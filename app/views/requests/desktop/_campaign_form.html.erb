<%= f.hidden_field :service_code, id: 'request_service_code_1', value: service_code %>
<%= f.hidden_field :type, value: @request.type %>
<div id="form-page-1">
  <div class="row form-group">
    <%= label_tag :step, t('.step_one'), class: 'control-label col-md-12' %>
  </div>
  <div class="row form-group">
    <%= label_tag :where, t('.where'), class: 'col-md-12' %>
    <div class="col-md-12"><%= t('.place_hint_one') %></div>
  </div>
  <div class="row form-group">
    <div class="col-md-12"><%= t('.place_hint_two') %></div>
  </div>
  <div class="row form-group">
    <div class="col-md-12"><%= t('.place_icon') %></div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="btn-group btn-group-justified" role="group">
        <%= link_to(t('buttons.cancel'), [:map, cancel: true], remote: true, class: 'btn btn-default back') %>
        <%= link_to(t('buttons.continue'), '#', remote: true, class: 'btn btn-primary btn-continue',
                    role: :button, data: { current: '1', next: '3', url: new_request_path }) %>
      </div>
    </div>
  </div>
</div>
<div id="form-page-3" class="hidden-page">
  <div class="row form-group">
    <%= label_tag :step, t('.step_two'), class: 'control-label col-md-12' %>
  </div>
  <div class="row radio-btns" data-url="<%= new_request_path(switch_bike_type: true) %>">
    <%= label_tag :what, t('.what'), class: 'col-md-12 control-label' %>
    <div class="col-md-12"><%= t('.bike_type_hint') %></div>
    <div class="col-md-12 div-margin-top">
      <%= f.radio_button :bike_type, 'cargo', class: 'radio-type' %> <%= label_tag :request_bike_type_cargo,
        t('.cargo'), class: 'check-label' %>
      <br/>
      <%= f.radio_button :bike_type, 'bike', class: 'radio-type' %> <%= label_tag :request_bike_type_bike,
        t('.bike'), class: 'check-label' %>
      <input type="hidden" value="cargo" name="bike_type" id="bike_type" />
    </div>
  </div>
  <div class="row form-group div-margin-top">
    <%= label_tag :how_many, t('.how_many'), class: 'col-md-12 control-label' %>
    <div class="col-md-12"><%= t('.quantity_hint') %></div>
    <div class="col-md-12 div-margin-top">
      <select name="quantity" id="quantity">
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
        <option value="6">6</option>
        <option value="7">7</option>
        <option value="8">8</option>
        <option value="9">9</option>
        <option value="10">10</option>
        <option value=">10">mehr als 10</option>
      </select>
    </div>
  </div>
  <div class="row form-group div-margin-top">
    <%= label_tag :what_exactly, t('.what_exactly'), class: 'col-md-12' %>
    <div class="col-md-12">
      <%= f.text_area(:description, rows: 5, class: 'form-control', placeholder: t('placeholder.description'),
                      data: { 'missing-message': t('requests.create.error.required.description') }) %>
    </div>
  </div>
  <div class="row form-group">
    <%= f.label(:media, Request.human_attribute_name(:media), class: 'col-md-12 control-label') %>
    <div class="col-md-12"><%= t('.photo_hint') %></div>
    <div class="col-md-12">
      <%= f.file_field(:media, multiple: false, accept: 'image/png,image/jpeg') %>
    </div>
  </div>
  <div class="row form-group">
    <%= label_tag :hint, t('.hint.label'), class: 'col-md-12 control-label' %>
    <div class="col-md-12"><%= t('.hint.text') %></div>
  </div>
  <div class="row form-group" class="hidden-page">
    <div class="btn-group btn-group-justified col-md-12" role="group">
      <%= link_to(t('buttons.back'), '#', remote: true,
                  class: 'btn btn-default btn-continue back', role: :button,
                  data: { current: '3', next: '1' }) %>
      <%= link_to(t('buttons.continue'), '#', remote: true,
                  class: 'btn btn-primary btn-continue', role: :button,
                  data: { current: '3', next: 'submit' }) %>
    </div>
  </div>
</div>
<div id="form-page-submit" class="hidden-page">
  <div class="row form-group">
    <%= label_tag :step, t('.step_three'), class: 'control-label col-md-12' %>
  </div>
  <div class="row form-group">
    <%= label_tag :confirmation, t('.confirmation'), class: 'col-md-12 control-label' %>
  </div>
  <div class="row form-group">
    <div class="col-md-12">
      <%= t('.confirmation_text_privacy_html') %>
    </div>
    <div class="col-md-12 div-margin-top">
      <%= t('.confirmation_text_html') %>
    </div>
    <div class="col-md-12 div-margin-top">
      <em class="text-danger"><%= t('.confirmation_text_warning_html') %></em>
    </div>
  </div>
  <% if display?(:email) -%>
    <div class="row form-group">
      <div class="col-md-12">
        <%= f.email_field(:email, class: 'form-control', placeholder: t('placeholder.email')) %>
      </div>
    </div>
  <% end -%>
  <% if display?(:privacy_policy) -%>
    <%= render partial: 'privacy_policy_form', locals: { form: f } %>
  <% end -%>
  <div class="row form-group">
    <div class="btn-group btn-group-justified col-md-12" role="group">
      <%= link_to(t('buttons.back'), '#', remote: true,
                  class: 'btn btn-default btn-continue back', role: :button,
                  data: { current: 'submit', next: '3' }) %>
      <div class="btn-group" role="group">
        <%= f.submit(t('buttons.save'), class: 'btn btn-primary') %>
      </div>
    </div>
  </div>
</div>
